<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AOB_GUI"
        xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" x:Class="AOB_GUI.MainWindow"
        mc:Ignorable="d"
        Title="JY AUTOMOTIVE DRIVE PLAYER" Height="450" Width="1200">

    <StackPanel Orientation="Vertical">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_파일(F)">
                <MenuItem Header="_새로 만들기(N)"/>
                <MenuItem Command="{Binding ShowUserInfo}" Header="_열기(O)"/>
                <Separator/>
                <MenuItem Header="_끝내기(x)"/>
            </MenuItem>
            <MenuItem Header="_편집(E)"></MenuItem>
            <MenuItem Header="_보기(V)"></MenuItem>
            <MenuItem Header="_창(W)"></MenuItem>
            <MenuItem Header="_도움말(H)"></MenuItem>
        </Menu>
        
            <Frame VerticalAlignment="Center" NavigationUIVisibility="Hidden" Source="/view/UserInfoView.xaml"/>
        <TextBlock Text="{Binding UserInfoList}"/>
    </StackPanel>
</Window>
